using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
namespace TERMOCIASTO
{
    public class Program
    {
        static List<string> cake = new List<string>() { "Murzynek", "Szarlotka", "Karpatka", "Sernik", "Makowiec", "Kremówki" };

        public static void Main(string[] args)
        {
            refresh();
            //Menu.
            static void menu()
            {
                Console.WriteLine("----------MENU----TERMOCAKE----------");
                Console.WriteLine("1. Cake list.\n2. Add the cake.\n3. Edit cake.\n4. Remove the cake.\n5. Exit.");
                Console.WriteLine("-------------------------------------");
                choice();
            }
            //Wybór.
            static void choice()
            {
                bool a = int.TryParse(Console.ReadLine(), out int a1);

                if (a)
                {
                    switch (a1)
                    {
                        case 1:
                            cakeList();
                            break;
                        case 2:
                            addCake();
                            break;
                        case 3:
                            editCake();
                            break;
                        case 4:
                            removeCake();
                            break;
                        case 5:
                            Environment.Exit(0);
                            break;
                        default:
                            Console.WriteLine("Wybrałeś opcję, której nie mogę zrealizować.");
                            Console.ReadKey();
                            refresh();
                            break;
                    }
                }
                else
                {
                    refresh();
                }
            }
            //Lista ciast.
            static void cakeList()
            {
                Console.Clear();
                Console.WriteLine("Na jakie ciasto masz dziś ochotę? :)\n");
                foreach (string item in cake)
                {
                    Console.WriteLine(cake.IndexOf(item) + " " + item.ToUpper());
                }

                bool b = int.TryParse(Console.ReadLine(), out int b1);
                if (b)
                {

                    switch (b1)
                    {
                        case 0:
                            recipe00();
                            break;
                        case 1:
                            recipe11();
                            break;
                        case 2:
                            recipe22();
                            break;
                        case 3:
                            recipe33();
                            break;
                        case 4:
                            recipe44();
                            break;
                        case 5:
                            recipe55();
                            break;
                        case 6:
                            Console.WriteLine("System ściąga z internetu przepis - poczekaj sekundę :)");
                            Console.WriteLine("Naciśnij dowolny klawisz by kontynuować.");
                            Console.ReadKey();
                            recipe66();
                            break;
                        default:
                            Console.WriteLine("Program nie rozumie polecania. Wracam do menu :)");
                            Console.ReadKey();
                            refresh();
                            break;
                    }
                }
                else
                {
                    Console.WriteLine("Program nie rozumie polecania. Wracam do menu :)");
                    Console.ReadKey();
                    refresh();
                }
            }
            //Dodawanie pozycji.
            static void addCake()
            {
                Console.Clear();
                Console.WriteLine("Podaj nazwę swojego ciasta: ");
                string noweCiasto = Console.ReadLine();
                Console.WriteLine("Dodałem nowe ciasto do listy.");
                cake.Add(noweCiasto);
                Console.WriteLine("1. Cofnij.");
                Console.ReadKey();
                refresh();
            }
            //Edycja pozycji.
            static void editCake()
            {
                Console.WriteLine("Podaj numer ciasta do edycji: ");
                int edytowaneCiasto = int.Parse(Console.ReadLine());
                Console.WriteLine("Podaj nową nazwę ciasta: ");
                string nowaNazwa = Console.ReadLine();
                cake[edytowaneCiasto] = nowaNazwa;
                Console.WriteLine("1. Cofnij.");
                Console.ReadKey();
                refresh();
            }
            //Usuwanie pozycji.
            static void removeCake()
            {
                Console.WriteLine("Podaj numer ciasta do usunięcia: ");
                int usuwaneCiasto = int.Parse(Console.ReadLine());
                cake.RemoveAt(usuwaneCiasto);
                refresh();
            }
            //Odświeżanie.
            static void refresh()
            {
                Console.Clear();
                menu();
                Console.ReadKey();
            }
            //Przepis na Murzynka.
            static void recipe00()
            {
                Console.Clear();
                Recipe recipe0;
                recipe0.name = "Murzynek";
                Console.WriteLine("Wybrałeś przepis na {0} - powodzenia :)\n", recipe0.name);
                recipe0.FlourName = "Mąka";
                recipe0.ButterName = "Masło";
                recipe0.SugarName = "Cukier";
                recipe0.EggName = "Jajka";
                recipe0.FlourWeight = 200;
                recipe0.ButterWeight = 100;
                recipe0.SugarWeight = 70;
                recipe0.NumberOfEgg = 3;
                recipe0.decorate = "posypką";
                recipe0.mix = "Wymieszaj";
                recipe0.add = "wrzuć";
                recipe0.time = 50;
                recipe0.temp = 180;

                Console.WriteLine("1. Składniki.\n2. Przygotowanie.\n3. Dekoracja.\n4. Menu Główne.");

                bool c = int.TryParse(Console.ReadLine(), out int c1);
                if (c)
                {
                    switch (c1)
                    {
                        case 1:

                            Console.Clear();
                            Console.WriteLine("\nSkładniki:");
                            Console.WriteLine("\n{0}: {1} gram. {2}: {3} gram. {4}: {5} gram. {6}: {7} szt.", recipe0.FlourName, recipe0.FlourWeight, recipe0.ButterName, recipe0.ButterWeight, recipe0.SugarName, recipe0.SugarWeight, recipe0.EggName, recipe0.NumberOfEgg);
                            Console.WriteLine("\n1. Cofnij.");
                            Console.ReadKey();
                            recipe00();
                            break;
                        case 2:
                            Console.Clear();
                            Console.WriteLine("\nDo miski {0}: {1}, {2} i {3} oraz rozbite {4}.", recipe0.add, recipe0.FlourName, recipe0.ButterName, recipe0.SugarName, recipe0.EggName);
                            Console.WriteLine("\n{0} wszystkie składniki.", recipe0.mix);
                            Console.WriteLine("\nPrzelej do foremki i wrzuć do piekarnika rozgrznego do {0} stopni na {1} minut.", recipe0.temp, recipe0.time);
                            Console.WriteLine("\n1. Cofnij.");
                            Console.ReadKey();
                            recipe00();
                            break;
                        case 3:
                            Console.Clear();
                            Console.WriteLine("\nPo wychłodzeniu przystąp do dekoracji swojego {0}.", recipe0.name);
                            Console.WriteLine("\nPosyp ciasto {0} swoją ulubioną {1}. SMACZNEGO :)", recipe0.name, recipe0.decorate);
                            Console.WriteLine("\n1. Cofnij.");
                            Console.ReadKey();
                            recipe00();
                            break;
                        case 4:
                            refresh();
                            break;
                    }
                }
                else
                {
                    Console.WriteLine("Program nie rozumie polecania. Wracam do menu :)");
                    Console.ReadKey();
                    refresh();
                }
            }
